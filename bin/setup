#!/usr/bin/env ruby
require 'pathname'

# path to your application root.
APP_ROOT = Pathname.new File.expand_path('../../', __FILE__)
USER_MAPPING = "#{Process.uid}:#{Process.gid}"
MINIMUM_DOCKER_VERSION = '17.03'
MINIMUM_COMPOSE_VERSION = '1.12'

def system!(*args)
  system(*args) || abort("\n== Command #{args} failed ==")
end

Dir.chdir APP_ROOT do
  puts '== Checking Docker Environment =='

  docker_version = `docker version --format '{{.Server.Version}}'`.gsub(/-ce\z/, '')
  compose_version = `docker-compose version --short`

  if Gem::Version.new(docker_version) < Gem::Version.new(MINIMUM_DOCKER_VERSION) || Gem::Version.new(compose_version) < Gem::Version.new(MINIMUM_COMPOSE_VERSION)
    abort "You need Docker at least in Version #{MINIMUM_DOCKER_VERSION} and Docker Compose at least in Version #{MINIMUM_COMPOSE_VERSION}. Please see README.md."
  end

  puts 'Docker and Docker Compose versions sufficient'

  puts "\n== Creating .env file =="
  File.open(".env", "w") { |f| f.write "USER_MAPPING=#{USER_MAPPING}" }
  puts 'Done'

  puts "Run `docker-compose up` to start your development server"
end
